@using Vidly.Models;
@model Vidly.Models.Customer
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Membership Type: @Model.MembershipType.MembershipTypeName</li>
    @if (Model.BirthDate != null)
    {
        <li>BirthDate: @(((DateTime)Model.BirthDate).ToShortDateString())</li>
    }
</ul>

