@using Vidly.Models;
@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table id="movies" class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>

        </tbody>
    </table>

@section scripts{
    <script>

        var table = $("#movies").DataTable({
            ajax: {
                url: "/api/movies",
                dataSrc:""
            },

            columns:[
                {
                    data:"name"
                },
                {
                    data: "genre.genreName"
                }
            ]
        });

    </script>
    }