@model Vidly.ViewModels.MovieGenreViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MovieForm</h2>
@using (@Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true,"Please fix the following.")
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class="form-control"})
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ReleaseDate)
        @Html.TextBoxFor(x => x.ReleaseDate, "{0:d MMM yyyy}" , new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.GenreId)
        @Html.DropDownListFor(x => x.GenreId, new SelectList(Model.Genre, "Id", "GenreName"),"Select Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.GenreId)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Stock)
        @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Stock)
    </div>
    @Html.HiddenFor(x => x.Id)
    @Html.AntiForgeryToken()
    <input type="submit" class="btn btn-primary" />
}


@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
    }